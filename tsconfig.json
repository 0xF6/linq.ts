{
    "compilerOptions": {
        "target": "es6",
        "module": "amd",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outFile": "linqable.js",
        "moduleResolution": "node",
        "declaration": true
    },
    "typeRoots": [
        "node_modules/@types"
    ],
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "*.js",
        "bin",
        "dist",
        "src/test/**/*",
        "test"
    ]
}